<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>Index</servlet-name>
        <jsp-file>/index.jsp</jsp-file>
        <init-param>
            <param-name>maxLength</param-name>
            <param-value>15</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>Index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Subscripcion</servlet-name>
        <jsp-file>/subscripcion.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>Subscripcion</servlet-name>
        <url-pattern>/inicio/subscripcion/view</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Admin</servlet-name>
        <jsp-file>/admin.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>Admin</servlet-name>
        <url-pattern>/inicio/admin/view</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>Register</servlet-name>
        <jsp-file>/register.jsp</jsp-file>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Inicio</servlet-name>
        <jsp-file>/inicio.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>Inicio</servlet-name>
        <url-pattern>/inicio/usuario</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>Proyecto</servlet-name>
        <jsp-file>/proyecto.jsp</jsp-file>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>Proyecto</servlet-name>
        <url-pattern>/inicio/proyecto/view</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Editar</servlet-name>
        <jsp-file>/editar.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>Editar</servlet-name>
        <url-pattern>/inicio/modificar/view</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Historial</servlet-name>
        <jsp-file>/historial.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>Historial</servlet-name>
        <url-pattern>/inicio/historial/view</url-pattern>
    </servlet-mapping>

</web-app>