<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>Index</servlet-name>
        <jsp-file>/index.jsp</jsp-file>
        <init-param>
            <param-name>maxLength</param-name>
            <param-value>15</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>Index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Subscripcion</servlet-name>
        <jsp-file>/subscripcion.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>Subscripcion</servlet-name>
        <url-pattern>/inicio/subscripcion</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Admin</servlet-name>
        <jsp-file>/admin.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>Admin</servlet-name>
        <url-pattern>/inicio/admin/view</url-pattern>
    </servlet-mapping>
</web-app>